{
  "name": "safenode",
  "version": "0.1.0",
  "description": "Run any Node project safely in Docker using ni inside the container.",
  "license": "MIT",
  "bin": {
    "safenode": "bin/safenode"
  },
  "files": [
    "bin/",
    "scripts/",
    "README.md"
  ],
  "scripts": {
    "build": "bun build ./src/cli.ts --compile --outfile=bin/safenode",
    "prepack": "node ./scripts/postinstall.mjs --build-local",
    "postinstall": "node ./scripts/postinstall.mjs",
    "dev": "bun run src/cli.ts -- --help"
  },
  "engines": {
    "node": ">=18",
    "bun": ">=1.1.0"
  }
}